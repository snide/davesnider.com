{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "types": ["@astrojs/image/client"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@images/*": ["src/images/*"],
      "@styles/*": ["src/styles/*"],
      "@services/*": ["src/services/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "plugins": [
    {
      "name": "@astrojs/ts-plugin"
    }
  ]
}
