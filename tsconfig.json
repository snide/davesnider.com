{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@images/*": [
        "src/images/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@db/*": [
        "src/db/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@localTypes/*": [
        "src/types/*"
      ]
    }
  },
  "plugins": [
    {
      "name": "@astrojs/ts-plugin"
    }
  ]
}
