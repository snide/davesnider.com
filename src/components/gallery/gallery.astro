---
const { folder } = Astro.props;

const folderImages = await Astro.glob('../../images/**/*').then((files) => {
  return files.map((file) => file.default);
});

// Clone folderImages to a new constant
const folderImagesClone = [...folderImages];

// Apply filter operation on a new constant
const filteredImages = folderImagesClone.filter((image) => image.src.includes(folder));

import { Image } from 'astro:assets';
console.log('folder images', folderImages);
---

{
  filteredImages.map((image, index) => {
    return <Image src={image} width={1200} alt="Folder image" />;
  })
}
<style>
  img {
    max-width: 1200px !important;
    width: 100% !important;
    height: auto;
    margin-bottom: 0.5rem !important;
    margin-left: auto;
    margin-right: auto;
  }

  img:last-child {
    margin-bottom: 0;
  }
</style>
